<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:top="3dp">
        <shape android:shape="rectangle" >
            <solid android:color="#30000000" />

            <corners android:radius="@dimen/dialog_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:top="3dp">
        <shape android:shape="rectangle" >
            <solid android:color="#50000000" />

            <corners android:radius="@dimen/dialog_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="3dp">
        <shape android:shape="rectangle" >
            <solid android:color="#A0000000" />

            <corners android:radius="@dimen/dialog_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#ccbada" />

            <corners android:radius="@dimen/dialog_corner_radius" />
        </shape>
    </item>

</layer-list>