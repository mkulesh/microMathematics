<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            style="@style/DialogTextViewStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingRight="@dimen/dialog_table_cell_padding"
            android:maxLines="1"
            android:text="@string/dialog_result_details_argument" />

        <View style="@style/VerticalDividerStyle" />

        <TextView
            style="@style/DialogTextViewStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingLeft="@dimen/dialog_table_cell_padding"
            android:maxLines="1"
            android:text="@string/dialog_result_details_value" />
    </LinearLayout>

    <View style="@style/HorizontalDividerStyle" />

    <ListView
        android:id="@+id/result_details_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dialog_panel_vertical_padding"
        android:layout_weight="1"
        android:clickable="false"
        android:divider="@drawable/divider_horizontal_light"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="false"
        android:fastScrollEnabled="true"
        android:saveEnabled="false" />

    <View style="@style/HorizontalDividerStyle" />

    <TextView
        android:id="@+id/result_details_items_number"
        style="@style/DialogTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dialog_content_padding"
        android:maxLines="1" />

</merge>