<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:micromath="http://schemas.android.com/apk/res-auto" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dialog_content_padding"
            android:paddingTop="@dimen/dialog_content_padding" >

            <com.mkulesh.micromath.widgets.HorizontalNumberPicker
                android:id="@+id/dialog_zlabels_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                micromath:label="@string/dialog_colormap_settings_zlabels" />

            <View
                style="@style/HorizontalDividerStyle"
                android:layout_marginBottom="@dimen/dialog_content_padding"
                android:layout_marginTop="@dimen/dialog_content_padding" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/dialog_rbutton_cool"
                    style="@style/RadioButtonStyle" />

                <com.mkulesh.micromath.plots.views.ColorMapView
                    android:id="@+id/dialog_cmbar_cool"
                    style="@style/ColorMapBarStyle"
                    micromath:paletteName="COOL" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/dialog_rbutton_fire"
                    style="@style/RadioButtonStyle" />

                <com.mkulesh.micromath.plots.views.ColorMapView
                    android:id="@+id/dialog_cmbar_fire"
                    style="@style/ColorMapBarStyle"
                    micromath:paletteName="FIRE" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/dialog_rbutton_coldhot"
                    style="@style/RadioButtonStyle" />

                <com.mkulesh.micromath.plots.views.ColorMapView
                    android:id="@+id/dialog_cmbar_coldhot"
                    style="@style/ColorMapBarStyle"
                    micromath:paletteName="COLDHOT" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/dialog_rbutton_rainbow"
                    style="@style/RadioButtonStyle" />

                <com.mkulesh.micromath.plots.views.ColorMapView
                    android:id="@+id/dialog_cmbar_rainbow"
                    style="@style/ColorMapBarStyle"
                    micromath:paletteName="RAINBOW" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/dialog_rbutton_earthsky"
                    style="@style/RadioButtonStyle" />

                <com.mkulesh.micromath.plots.views.ColorMapView
                    android:id="@+id/dialog_cmbar_earthsky"
                    style="@style/ColorMapBarStyle"
                    micromath:paletteName="EARTHSKY" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/dialog_rbutton_greenblue"
                    style="@style/RadioButtonStyle" />

                <com.mkulesh.micromath.plots.views.ColorMapView
                    android:id="@+id/dialog_cmbar_greenblue"
                    style="@style/ColorMapBarStyle"
                    micromath:paletteName="GREENBLUE" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/dialog_rbutton_grayscale"
                    style="@style/RadioButtonStyle" />

                <com.mkulesh.micromath.plots.views.ColorMapView
                    android:id="@+id/dialog_cmbar_grayscale"
                    style="@style/ColorMapBarStyle"
                    micromath:paletteName="GRAYSCALE" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</merge>