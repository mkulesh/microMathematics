<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:saveEnabled="false" >

    <TextView
        android:id="@+id/result_details_item_argument"
        style="@style/DialogTextViewStyle"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/dialog_panel_color"
        android:ellipsize="end"
        android:paddingRight="@dimen/dialog_table_cell_padding"
        android:maxLines="1" />

    <View style="@style/VerticalDividerStyle" />

    <TextView
        android:id="@+id/result_details_item_value"
        style="@style/DialogTextViewStyle"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/dialog_panel_color"
        android:ellipsize="end"
        android:paddingLeft="@dimen/dialog_table_cell_padding"
        android:maxLines="1" />

</LinearLayout>